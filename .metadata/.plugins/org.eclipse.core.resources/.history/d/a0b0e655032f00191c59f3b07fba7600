		this.pmrcRating = pmrcRating;	
		db.executeQuery(sql);
	}

	public int getLength() {
		return length;
	}

	public void setLength(int length) {
		DbUtilities db = new DbUtilities();
		String sql = "UPDATE album SET length = '" + length + "'WHERE album_id = '" + this.albumID + "';";
		System.out.println(sql);
